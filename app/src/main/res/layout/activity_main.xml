<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueOrigin"
    android:id="@+id/back"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="3.5in"
        android:background="@drawable/background_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="188dp"
            android:layout_height="154dp"
            android:layout_marginTop="263dp"
            android:layout_marginBottom="26dp"
            android:src="@drawable/ic_baseline_electrical_services_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_true2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="212dp"
            android:layout_height="179dp"
            android:layout_marginEnd="65dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_baseline_electrical_services_24"
            app:layout_constraintBottom_toTopOf="@+id/button_true"
            app:layout_constraintEnd_toStartOf="@+id/button_true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="205dp"
            android:layout_height="152dp"
            android:layout_marginStart="43dp"
            android:layout_marginBottom="14dp"
            android:rotation="180"
            android:src="@drawable/ic_baseline_electrical_services_24"
            app:layout_constraintBottom_toTopOf="@+id/button_true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_true"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="194dp"
            android:layout_height="167dp"
            android:layout_marginStart="67dp"
            android:layout_marginTop="52dp"
            android:rotation="180"
            android:src="@drawable/ic_baseline_electrical_services_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/button_true2" />

        <Button
            android:id="@+id/button_true"
            android:layout_width="163dp"
            android:layout_height="151dp"
            android:layout_marginStart="114dp"
            android:layout_marginEnd="134dp"
            android:layout_marginBottom="328dp"
            android:layout_weight="1"
            android:background="@drawable/trueandfalse"
            android:text="True"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button_true2"
            android:layout_width="163dp"
            android:layout_height="151dp"
            android:layout_marginStart="114dp"
            android:layout_marginEnd="134dp"
            android:layout_weight="1"
            android:background="@drawable/trueandfalse"
            android:text="True"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.655" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="104dp"
        android:layout_height="40dp"
        android:layout_marginStart="157dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="75dp"
        android:fontFamily="@font/mmedium"
        android:text="Welcome!"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="86dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="86dp"
        android:layout_marginBottom="44dp"
        android:fontFamily="@font/mlight"
        android:text="Here is the status of your system"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>